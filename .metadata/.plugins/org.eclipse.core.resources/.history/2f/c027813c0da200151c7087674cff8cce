package com.Twomey.TheAlmightyMessenger;
import java.awt.BorderLayout;
import java.awt.Dimension;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JScrollPane;

public class Server {

	JFrame ServerFrame;
	JPanel ControlPane;
	JLabel LogTextLabel;
	JScrollPane LogTextScrollPane;
	
	public static void main(String[] args) {
		new Server();
	}
	
	Server()
	{
		ServerFrame = new JFrame("The Almighty Messenger Server");
		LogTextScrollPane = new JScrollPane();
		
		ServerFrame.setVisible(true);
		ServerFrame.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		
		LogTextLabel.setPreferredSize(new Dimension(1000,1000));
		
		LogTextScrollPane.add(LogTextLabel);
		LogTextScrollPane.setVerticalScrollBarPolicy(JScrollPane.VERTICAL_SCROLLBAR_ALWAYS);
		
		ServerFrame.add(LogTextScrollPane, BorderLayout.CENTER);
		ServerFrame.setSize(350, 300);
	}

}
